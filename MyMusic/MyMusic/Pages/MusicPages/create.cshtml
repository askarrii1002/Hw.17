<div>
    <h2>Add Music</h2>
</div>
<div>
    <form method="post">
        <input asp-for="Music1.Song" type="text" placeholder="Title" />
        <span asp-validation-for="Music1.Song"></span>
        <input asp-for="Music1.Artist" type="text" placeholder="Artist" />
        <span asp-validation-for="Music1.Artist"></span>
        <input asp-for="Music1.Album" type="text" placeholder="Album" />
        <span asp-validation-for="Music1.Album"></span>
        <input asp-for="Music1.StarRating" type="text" placeholder="Star Ranking" />
        <span asp-validation-for="Music1.StarRating"></span>

        <input type="submit" value="Add Music"/>
        <a asp-page="Index">Back to music list</a>
    </form>
